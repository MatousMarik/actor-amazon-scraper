{
    "title": "Dummy Amazon Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "keyword": {
            "title": "Product keyword",
            "type": "string",
            "description": "Keyword for the products, their corresponding offers you want to scrape.",
            "editor": "textfield",
            "prefill": "iphone"
        },
        "useProxy": {
            "title": "Use US proxy",
            "type": "boolean",
            "description": "Whether to use US proxy.",
            "default": true
        },
        "maxRetries": {
            "title": "Max Retries",
            "type": "integer",
            "description": "Maximum number of retries if the request fails.",
            "default": 50
        },
        "skipNoDescription": {
            "title": "Skip No Description",
            "type": "boolean",
            "description": "Don't retry on no description.",
            "default": false
        }
    },
    "required": ["keyword"]
}
